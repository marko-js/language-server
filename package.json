{
  "name": "marko-language-server-repo",
  "devDependencies": {
    "@changesets/changelog-github": "^0.4.8",
    "@changesets/cli": "^2.26.1",
    "@types/mocha": "^10.0.1",
    "@types/node": "^18.15.11",
    "@typescript-eslint/eslint-plugin": "^5.57.0",
    "@typescript-eslint/parser": "^5.57.0",
    "esbuild": "^0.17.14",
    "eslint": "^8.37.0",
    "eslint-config-prettier": "^8.8.0",
    "eslint-import-resolver-typescript": "^3.5.4",
    "eslint-plugin-import": "^2.27.5",
    "fast-glob": "^3.2.12",
    "husky": "^8.0.3",
    "lint-staged": "^13.2.0",
    "mocha": "^10.2.0",
    "mocha-snap": "^4.3.0",
    "prettier": "^2.8.7",
    "tsx": "^3.12.6",
    "typescript": "^5.0.3"
  },
  "private": true,
  "scripts": {
    "build": "NODE_ENV=production npm run -ws build",
    "build:dev": "tsx ./packages/vscode/build.mts",
    "change": "npm exec changeset add",
    "format": "npm run build && eslint -f visualstudio --fix . && prettier \"./**/*{.ts,.js,.json,.md,.yml,rc}\" --write",
    "prepare": "husky install & npm run -ws --if-present prepare",
    "release": "npm run build && changeset publish && npm run -ws --if-present release",
    "test": "npm run -ws --if-present test",
    "version": "changeset version && npm i --package-lock-only"
  },
  "workspaces": [
    "./packages/*"
  ]
}
