{
  "name": "marko-language-server-repo",
  "devDependencies": {
    "@changesets/cli": "^2.21.1",
    "@types/node": "^15.14.9",
    "@typescript-eslint/eslint-plugin": "^5.16.0",
    "@typescript-eslint/parser": "^5.16.0",
    "esbuild": "^0.14.27",
    "esbuild-register": "^3.3.2",
    "eslint": "^8.11.0",
    "eslint-config-prettier": "^8.5.0",
    "husky": "^6.0.0",
    "lint-staged": "^10.5.4",
    "prettier": "^2.6.0",
    "typescript": "^4.6.2"
  },
  "private": true,
  "scripts": {
    "ci:publish": "pnpm -r build && changeset publish && mkdir -p dist; export OUT=$PWD/dist/marko.vsix; (cd ./clients/vscode && vsce package --no-dependencies -o $OUT && vsce publish --packagePath $OUT && ovsx publish $OUT -p $OVSX_PAT)",
    "ci:version": "changeset version",
    "format": "pnpm lint:eslint -- --fix && pnpm lint:prettier -- --write",
    "lint": "pnpm -r build && pnpm lint:eslint && pnpm lint:prettier -- -l",
    "lint:eslint": "eslint -f visualstudio .",
    "lint:prettier": "prettier \"./**/*{.ts,.js,.json,.md,.yml,rc}\""
  }
}
