{
  "devDependencies": {
    "@commitlint/cli": "^8.1.0",
    "@commitlint/config-conventional": "^8.1.0",
    "@commitlint/config-lerna-scopes": "^8.1.0",
    "@types/node": "^12.7.1",
    "husky": "^3.0.3",
    "lerna": "^3.16.4",
    "lint-staged": "^9.2.1",
    "prettier": "^1.18.2",
    "tslint": "^5.18.0",
    "tslint-config-prettier": "^1.18.0",
    "typescript": "^3.5.3",
    "vsce": "^1.66.0"
  },
  "scripts": {
    "build": "tsc -b ./server ./clients/vscode",
    "format": "prettier \"**/*.{ts,js,json,md}\" --write",
    "lint": "tsc -p ./server --noEmit && tsc -p ./clients/vscode --noEmit && tslint -t codeFrame -c tslint.json '{server,clients/*}/src/**/*.ts'",
    "postinstall": "lerna bootstrap",
    "prepublishOnly": "npm run build",
    "publish": "lerna publish",
    "postpublish": "(cd ./clients/vscode && vsce publish)",
    "watch": "npm run build -- -w"
  }
}
