{
  "name": "marko-vscode",
  "description": "Marko Tooling for VSCode",
  "version": "0.17.16",
  "activationEvents": [
    "onLanguage:marko"
  ],
  "bugs": "https://github.com/marko-js/language-server/issues/new?template=Bug_report.md",
  "categories": [
    "Programming Languages"
  ],
  "contributes": {
    "languages": [
      {
        "id": "marko",
        "aliases": [
          "Marko",
          "marko"
        ],
        "extensions": [
          ".marko"
        ],
        "configuration": "./marko.configuration.json"
      }
    ],
    "breakpoints": [
      {
        "language": "marko"
      }
    ],
    "grammars": [
      {
        "language": "marko",
        "scopeName": "text.marko",
        "path": "./syntaxes/marko.tmLanguage.json",
        "embeddedLanguages": {
          "source.css": "css",
          "source.css.less": "less",
          "source.css.scss": "scss",
          "source.ts": "typescript"
        }
      }
    ],
    "configuration": {
      "type": "object",
      "title": "Marko",
      "properties": {
        "marko.trace.server": {
          "scope": "window",
          "type": "string",
          "enum": [
            "off",
            "messages",
            "verbose"
          ],
          "default": "off",
          "description": "Traces the communication between VSCode and the language server."
        }
      }
    }
  },
  "devDependencies": {
    "@marko/language-server": "^0.12.2",
    "@types/vscode": "^1.67.0",
    "@vscode/test-electron": "^2.1.3",
    "ovsx": "^0.1.0",
    "tsx": "^3.4.2",
    "vsce": "^2.9.1",
    "vscode-languageclient": "^7.0.0"
  },
  "displayName": "Marko VSCode",
  "engines": {
    "vscode": "^1.66.0"
  },
  "homepage": "https://github.com/marko-js/language-server/tree/master/clients/vscode/README.md",
  "icon": "img/marko.png",
  "license": "MIT",
  "main": "./dist/index.js",
  "private": true,
  "publisher": "Marko-JS",
  "repository": {
    "type": "git",
    "url": "https://github.com/marko-js/language-server/tree/master/clients/vscode/"
  },
  "scripts": {
    "build": "tsc -b && tsx build.mts",
    "release": "export OUT=dist/marko.vsix; vsce package -o $OUT && vsce publish --packagePath $OUT && ovsx publish $OUT",
    "test": "tsx build-test.mts"
  }
}