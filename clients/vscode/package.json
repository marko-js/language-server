{
  "name": "marko-vscode",
  "description": "Marko Tooling for VSCode",
  "version": "0.16.0",
  "author": "Diego Berrocal",
  "bugs": "https://github.com/marko-js/language-server/issues/new?template=Bug_report.md",
  "activationEvents": [
    "onLanguage:marko"
  ],
  "categories": [
    "Programming Languages"
  ],
  "contributes": {
    "languages": [
      {
        "id": "marko",
        "aliases": [
          "Marko",
          "marko"
        ],
        "extensions": [
          ".marko"
        ],
        "configuration": "./marko.configuration.json"
      }
    ],
    "breakpoints": [
      {
        "language": "marko"
      }
    ],
    "grammars": [
      {
        "language": "marko",
        "scopeName": "text.marko",
        "path": "./syntaxes/marko.tmLanguage",
        "embeddedLanguages": {
          "source.css": "css",
          "source.css.less": "less",
          "source.css.scss": "scss",
          "source.js": "javascript"
        }
      }
    ],
    "configuration": {
      "type": "object",
      "title": "Marko",
      "properties": {
        "marko.trace.server": {
          "scope": "window",
          "type": "string",
          "enum": [
            "off",
            "messages",
            "verbose"
          ],
          "default": "off",
          "description": "Traces the communication between VSCode and the language server."
        }
      }
    }
  },
  "dependencies": {
    "@marko/language-server": "workspace:*",
    "tslib": "^2.3.1",
    "vscode-languageclient": "^7.0.0"
  },
  "displayName": "Marko VSCode",
  "engines": {
    "vscode": "^1.52.0"
  },
  "homepage": "https://github.com/marko-js/language-server/tree/master/clients/vscode/README.md",
  "icon": "img/marko.png",
  "license": "MIT",
  "main": "./dist/index.js",
  "private": true,
  "publisher": "Marko-JS",
  "repository": {
    "type": "git",
    "url": "https://github.com/marko-js/language-server/tree/master/clients/vscode/"
  }
}
