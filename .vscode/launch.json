{
  "version": "0.2.0",
  "compounds": [
    {
      "name": "Develop",
      "stopAll": true,
      "preLaunchTask": "build",
      "configurations": ["Launch Client", "Attach to Server"],
    },
    {
      "name": "Test",
      "stopAll": true,
      "preLaunchTask": "build",
      "configurations": ["Launch Test Client", "Attach to Server"],
    }
  ],
  "configurations": [
    {
      "name": "Launch Client",
      "type": "extensionHost",
      "request": "launch",
      "runtimeExecutable": "${execPath}",
      "args": [
        "--disable-extensions",
        "--extensionDevelopmentPath=${workspaceRoot}/packages/vscode",
        "/Users/dpiercey/dev/tmp/demo"
      ],
      "outFiles": [
        "${workspaceRoot}/**/dist/*.js",
        "!**/node_modules/**"
      ],
      "presentation": {
        "hidden": true
      }
    },
    {
      "name": "Launch Test Client",
      "type": "extensionHost",
      "request": "launch",
      "runtimeExecutable": "${execPath}",
      "args": [
        "--disable-extensions",
        "--extensionDevelopmentPath=${workspaceRoot}/packages/vscode",
        "--extensionTestsPath=${workspaceRoot}/packages/vscode/dist/__tests__/index.js"
      ],
      "outFiles": [
        "${workspaceRoot}/**/dist/*.js",
        "!**/node_modules/**"
      ],
      "presentation": {
        "hidden": true
      }
    },
    {
      "name": "Attach to Server",
      "type": "node",
      "request": "attach",
      "restart": true,
      "port": 6009,
      "presentation": {
        "hidden": true
      }
    }
  ]
}